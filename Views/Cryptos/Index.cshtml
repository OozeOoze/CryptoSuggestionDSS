@model CryptoSuggestion.Models.CoinMarketData

@{
    ViewData["Title"] = "Cryptocurrencies";
}

<div>
    <h1 class="display-4">@ViewData["Title"]  @Model.status.credit_count </h1>
    

    <table class="table table-striped table-bordered">

        <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Symbol</td>
            <td>Price</td>
        </tr>

        @foreach (var item in Model.data)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.symbol</td>
                <td>@item.quote.USD.price Dollahs</td>
            </tr>
        }


    </table>
</div>